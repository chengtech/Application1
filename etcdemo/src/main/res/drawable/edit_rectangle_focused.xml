<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item>
        <shape android:shape="line" >
            <solid android:color="@color/widget_blue" />
            <size android:width="3px" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />

            <corners
                android:bottomLeftRadius="@dimen/dimen_0"
                android:bottomRightRadius="@dimen/dimen_0"
                android:topLeftRadius="@dimen/dimen_0"
                android:topRightRadius="@dimen/dimen_0" />

            <padding
                android:bottom="@dimen/dimen_0"
                android:left="@dimen/dimen_0"
                android:right="@dimen/dimen_0"
                android:top="@dimen/dimen_0" />

            <stroke
                android:width="1px"
                android:color="#888888" />
        </shape>
    </item>

</layer-list>
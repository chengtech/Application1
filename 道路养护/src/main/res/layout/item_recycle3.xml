<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/default_white_click"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/count"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/red_plot"
        android:gravity="center"
        android:text="199"
        android:textColor="@color/white"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="我是一条主标题，主标题要很长的，一直长常常。"
            android:textColor="@color/light_sky_blue2"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@+id/title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:paddingRight="20dp"
            android:text="总实施里程:61.2"
            android:textColor="#88000000"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hideLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <include layout="@layout/item_planinside"></include>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/down_arraow"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@mipmap/down_arrow"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>